<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Forest Name: "
            android:id="@+id/tv"
            android:layout_margin="1dp"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vw_forest_name"
            android:layout_weight="1"
            android:enabled="false"
            android:textColor="@color/black" />

    </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Start Date: "
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/black" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vw_start_date"
            android:layout_weight="1"
            android:enabled="false"
            android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:id="@+id/textView19"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/black" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vw_fire_time"
                android:layout_weight="1"
                android:enabled="false"
                android:textColor="@color/black" />
        </LinearLayout>
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of Houses Affected: "
                android:id="@+id/tv1"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vw_no_of_houses_affected"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of Peoples Affected: "
                android:id="@+id/textView7"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vw_no_of_peoples_affected"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Areas Affected (in sq. m.): "
                android:id="@+id/textView13"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vw_area_affected"
                android:enabled="false"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regeneration Possibility: "
                android:id="@+id/textView100"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:id="@+id/vw_dt_regneration"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cause of Fire: "
                android:id="@+id/textView9"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:id="@+id/vw_cause_of_fire"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Type: "
                android:id="@+id/textView11"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_dt_fire_type"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Size: "
                android:id="@+id/textView12"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:id="@+id/vw_dt_fire_size"
                android:layout_weight="1"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Status of Fire: "
            android:id="@+id/textView4"
            android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:id="@+id/vw_dt_current_status"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forest Tree Density: "
                android:id="@+id/rg_density"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_density"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CFUG Members Arrival Time"
                android:id="@+id/textView20"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_cfug_arrival_time"
                android:layout_weight="1"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Fire Extinguish Time"
                android:id="@+id/textView21"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_fire_extinguish_time"
                android:layout_weight="1"
                android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="No of people/CFUG personnel mobilized"
                android:id="@+id/textView22"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_no_cfug_people_mobilized"
                android:layout_weight="1"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Other Institution Mobilized"
                android:id="@+id/textView23"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_other_institutions"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="What triggered the fire?"
                android:id="@+id/textView31"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:id="@+id/vw_triggers"
                android:enabled="false"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Equipment Brought"
                android:id="@+id/textView24"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_equipments_brought"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Use of Water"
                android:id="@+id/textView25"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_use_of_water"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Area Damaged (hectare)"
                android:id="@+id/textView26"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_area_damaged"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Burnt Area Feature"
                android:id="@+id/textView28"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_burnt_area_feature"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="From where fire had started?"
                android:id="@+id/textView29"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_fire_start_from"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Distance of Village From Forest Fire"
                android:id="@+id/textView30"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_distance_from_fire"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="No of Poles/Trees Burnt"
                android:id="@+id/textView27"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:enabled="false"
                android:id="@+id/vw_no_of_trees_burnt"
                android:layout_weight="1"
                android:textColor="@color/black" />
        </LinearLayout>
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/vw_damage_of_wildlife_title"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Damage of Wildlife?"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:enabled="false"
            android:id="@+id/vw_damage_of_wildlife" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:textColor="@color/black"
            android:id="@+id/vw_damage_of_ntft_title"
            android:layout_height="wrap_content"
            android:text="Damage of NTFT?"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:textColor="@color/black"
            android:id="@+id/vw_damage_of_ntft" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="fill_parent"
            android:id="@+id/vw_potential_impact_in_water_title"
            android:layout_height="wrap_content"
            android:text="Potential Impact of Fire in Water Bodies?"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:textColor="@color/black"
            android:id="@+id/vw_potential_impact_in_water" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/vw_potential_impact_in_soil_title"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Potential Impact of Fire in Soil Erosion?"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:id="@+id/vw_potential_impact_in_soil" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:textColor="@color/black"
            android:id="@+id/vw_how_extinguished_title"
            android:layout_height="wrap_content"
            android:text="How fire extinguished in short time?"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:textColor="@color/black"
            android:id="@+id/vw_how_extinguished" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/vw_how_not_extinguished_title"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="How fire not extinguished in short time?"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:textColor="@color/black"
            android:id="@+id/vw_how_not_extinguished" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/vw_lesson_for_future_title"
            android:text="Lesson For Future forest fire control"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:textColor="@color/black"
            android:id="@+id/vw_lesson_for_future" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/vw_other_remarks_title"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:id="@+id/vw_other_remarks" />
        <include
            layout="@layout/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </ScrollView>


</RelativeLayout>